@model List<Microsoft.AspNetCore.Http.Authentication.AuthenticationDescription>

@{ var displayText = ViewData["DisplayText"]; }

<div class="form-group">
    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div>
            <p>
                @foreach (var provider in Model)
                {
                    var lowerScheme = provider.AuthenticationScheme.ToLower();

                    <button type="submit" class="btn btn-block btn-social btn-@lowerScheme" name="provider" value="@provider.AuthenticationScheme" title="@displayText using your @provider.DisplayName account">
                        <span class="fa fa-twitter"></span> @displayText with @provider.AuthenticationScheme
                    </button>
                }
            </p>
        </div>
    </form>
</div>

<div class="form-group text-separator text-muted"><strong>OR</strong></div>
